<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_med"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mattalexander.dose.AddMed">

    <Button
        android:text="Add Additional Medications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Medication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="Dosage (mg)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:paddingRight="20dp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="Rifampin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:layout_row="2"
            android:layout_column="0"
            android:editable="true" />

        <TextView
            android:text="600"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="once daily"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:textAlignment="center" />

        <TextView
            android:text="once daily"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textAlignment="center" />

        <TextView
            android:text="1500"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:text="once daily"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:layout_row="3"
            android:layout_column="2" />

        <TextView
            android:text="Ethambutol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview40"
            android:textSize="18sp"
            android:paddingTop="30dp" />

        <TextView
            android:text="300"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textAlignment="center" />

        <TextView
            android:text="Pyrazinamide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:editable="true"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:text="Isoniazid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textSize="18sp"
            android:paddingTop="30dp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="Frequency"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_row="0"
            android:layout_column="2"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark" />

        <EditText
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="900"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorTertiary" />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="once daily"
            android:ems="10"
            android:id="@+id/editText8"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorTertiary" />


    </GridLayout>
</RelativeLayout>
